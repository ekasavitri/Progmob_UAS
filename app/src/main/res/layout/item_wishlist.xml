<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_wish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:padding="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

    <ImageView
        android:id="@+id/wishlist_foto"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/wishlist_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Kos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/wishlist_foto"/>

    <TextView
        android:id="@+id/wishlist_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="Harga Kos"
        android:layout_below="@+id/wishlist_judul"
        android:layout_toEndOf="@+id/wishlist_foto"
        android:layout_marginStart="15dp"/>

        <ImageButton
            android:id="@+id/butdel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:background="#ffff"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>